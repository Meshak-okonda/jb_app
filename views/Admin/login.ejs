<%- include('../Includes/begin.ejs') %>
<%- include('../Includes/navbar.ejs') %>
<section id="content-wrapper">
  <main role="main" class="pt-5 main">
    <div class="header text-center pt-5 pt-lg-4">
      <h1>Connexion <span style="color: orangered">Admin</span></h1>
    </div>
    <hr />
    <div class="container">
      <div class="row">
        <div class="col-md-6 m-auto">
          <div
            class="card card-body"
            style="
              box-shadow: 0 1rem 2rem 0 rgba(136, 152, 170, 0.15) !important;
            "
          >
            <h1 class="text-center mb-3">
              <i class="fas fa-sign-in-alt"></i> Se connecter
            </h1>
            <%- include('../Includes/messages') %>
            <form action="/admin/login" method="POST">
              <div class="form-group">
                <label for="email">Email</label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  class="form-control"
                  placeholder="Email"
                  required
                />
              </div>
              <div class="form-group">
                <label for="password">Mot de Passe</label>
                <input
                  type="password"
                  id="password"
                  name="password"
                  class="form-control"
                  placeholder="Mot de Passe"
                  required
                />
              </div>
              <button type="submit" class="btn btn-danger btn-block">
                Se connecter
              </button>
            </form>
            <p class="lead mt-4">
              <a href="/admin/register">Créer un compte</a>
            </p>
            <p class="lead">
              mot de passe oublié?<a href="/admin/forgot-password"
                >Réinitialiser</a
              >
            </p>
          </div>
        </div>
      </div>
    </div>
  </main>
</section>
<%- include('../Includes/end.ejs') %>
